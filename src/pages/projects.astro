---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import BackArrow from "../components/BackArrow.astro"
import ProjectsGrid from "../components/ProjectsGrid.astro";
---

<Layout 
title="Projects"
description="Projects I've worked on"
>
<main class="block text-white m-auto overflow-auto h-full w-full p-10">
        <section class="text-white group overflow-auto bg-darkslate-500 shadow-lg rounded-lg p-6 border border-darkslate-100 flex flex-col">
            <div class="flex flex-col items-center">
                <BackArrow href="/"/>
                <h2 transition:name="projects"> Projects </h2>
            </div>
            <ProjectsGrid/>
        </section>
</main>
</Layout>