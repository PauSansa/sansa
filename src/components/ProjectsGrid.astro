---
import Card from '../components/Card/index.astro'
import ProjectCard from './ProjectCard.astro';

const projects = [
    {
        title: 'AjuntMap - Barcelona World Capital',
        description: 'Finalist project in the Barcelona World Capital Hackathon. It provides a easy way to find the places where the Barcelona\'s town hall could help to boost the local commerce',
        image: '/images/heatmap.png',
        url: 'https://github.com/PauSansa/jump2digital-grup2',
        tags: ['React', 'Spring', 'Python']
    },
    {
        title: 'Entertainment-Api',
        description: 'This is my "portfolio" API, where I will implement some of my backend skills that I\'ve been learning throughout my career as a backend developer.',
        image: '/images/entertainment.png',
        url: 'https://github.com/PauSansa/entretainment-api',
        tags: ['Spring', 'MongoDB', 'JWT', 'Reactive']
    },
    {
        title: 'Movie Finder',
        description: 'My first project using React. It\'s a simple movie finder that uses the IMDB API to get the movies and show them to the user.',
        image: '/images/movie-finder.png',
        url: 'https://movie-finder-coral.vercel.app/',
        tags: ['React', 'useEffect']
    },
    {
        title: 'JOBarcelona',
        description: 'A basic OAuth API integration with GitHub. Finalist project on a hackathon with companies like Adidas, Edag, Telefonica',
        image: '/images/jobarcelona.png',
        url: 'https://github.com/PauSansa/JOBarcelona-Pau-Solution',
        tags: ['Spring', 'OAuth', 'GitHub API']
    },
    {
        title: 'DiceGame',
        description: 'My end of bootcamp project, it consist in a MVC web application that allows you to play a dice game against the computer.',
        image: '/images/dicegame.png',
        url: 'https://github.com/PauSansa/DiceGame',
        tags: ['Spring', 'ThyMeLeaf', 'MySQL']
    },
]
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-start content-start w-full h-full p-3">
    {projects.map((project) => {
        return <ProjectCard project={project}/>
    })}
</div>
